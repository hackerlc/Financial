<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:paddingTop="20dp"
    android:paddingBottom="16dp"
    android:background="@drawable/bg_common_corners_white_div">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textSize="13sp"
        android:textColor="@color/colorTextMain_Title"
        tools:text="优选计划......."/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="55dp"
        android:layout_height="16dp"
        android:gravity="center"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_common_corners_09ae18_div"
        android:textSize="10sp"
        android:textColor="@color/color09AE18"
        tools:text="出借成功"/>
    <View
        android:id="@+id/line1"
        style="@style/Common_Line"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_title"
        android:layout_below="@id/line1"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        android:text="出借金额"/>
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/line1"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:textSize="12sp"
        tools:text="120000.00"/>
    <TextView
        android:id="@+id/interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_title"
        android:layout_below="@id/money"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:text="预期收益"/>
    <TextView
        android:id="@+id/tv_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/money"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        tools:text="99.99"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/interest"
        android:layout_alignStart="@id/tv_title"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:text="交易时间"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/interest"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        tools:text="2010.00.00"/>
</RelativeLayout>