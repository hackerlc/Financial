<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.youth.banner.Banner
        android:id="@+id/br_view"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <LinearLayout
        android:id="@+id/div1"
        style="@style/HomeBanner_LL"
        android:layout_below="@id/br_view">

        <LinearLayout
            android:id="@+id/ll_item_1"
            style="@style/HomeBanner_LL_LL">

            <ImageView
                style="@style/HomeBanner_LL_LL_Img"
                android:src="@drawable/bg_home_head_itme_1" />

            <TextView
                style="@style/HomeBanner_LL_LL_Text"
                android:text="信息披露" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_2"
            style="@style/HomeBanner_LL_LL">

            <ImageView
                style="@style/HomeBanner_LL_LL_Img"
                android:src="@drawable/bg_home_head_itme_2" />

            <TextView
                style="@style/HomeBanner_LL_LL_Text"
                android:text="安全保证" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_3"
            style="@style/HomeBanner_LL_LL">

            <ImageView
                style="@style/HomeBanner_LL_LL_Img"
                android:src="@drawable/bg_home_head_itme_3" />

            <TextView
                style="@style/HomeBanner_LL_LL_Text"
                android:text="邀请有礼" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_4"
            style="@style/HomeBanner_LL_LL">

            <ImageView
                style="@style/HomeBanner_LL_LL_Img"
                android:src="@drawable/bg_home_head_itme_4" />

            <TextView
                style="@style/HomeBanner_LL_LL_Text"
                android:text="关于我们" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_size"
        android:layout_below="@id/div1"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/div2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:background="@android:color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/head_banner_left_right_margin"
        android:paddingRight="@dimen/head_banner_left_right_margin"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快讯"
            android:textColor="@color/colorTextMain_Title"
            android:textStyle="bold" />

        <com.paradoxie.autoscrolltextview.VerticalTextview
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height_size"
        android:layout_below="@id/div2" />

    <LinearLayout
        android:id="@+id/div3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:paddingLeft="@dimen/head_banner_left_right_margin"
        android:paddingRight="@dimen/head_banner_left_right_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_home_banner_div">
            <LinearLayout
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新手标"
                android:textColor="@color/colorTextMain_Title"
                android:textSize="14sp"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/colorLine"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1月"
                    android:textColor="@color/colorTextMain_Title"
                    android:textSize="14sp"/>
            </LinearLayout>
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="6dp"-->
                <!--android:layout_marginTop="4dp"-->
                <!--android:layout_toRightOf="@id/tv_title"-->
                <!--android:background="@drawable/bg_home_banner_new_text"-->
                <!--android:paddingBottom="3.5dp"-->
                <!--android:paddingLeft="9dp"-->
                <!--android:paddingRight="9dp"-->
                <!--android:paddingTop="4dp"-->
                <!--android:text="新手专享"-->
                <!--android:textColor="@color/colorAccent_FF4C4C"-->
                <!--android:textSize="10dp"-->
                <!--android:visibility="gone"/>-->

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="年化收益率"
                android:textColor="@color/colorTextSubordinate"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/info"
                android:layout_centerHorizontal="true"
                android:text="15.0%"
                android:textColor="@color/colorAccent_FF4C4C"
                android:textSize="33sp" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="150dp"
                android:layout_height="32dp"
                android:layout_below="@id/tv_profit"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_home_banner_button"
                android:text="授权出借"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height_size"
        android:layout_below="@id/div3" />

    <LinearLayout
        android:id="@+id/div4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line4"
        android:orientation="horizontal">

        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/head_banner_left_right_margin"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="推荐产品"
            android:textColor="@color/colorTextMain_Title"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/div4" />
</RelativeLayout>