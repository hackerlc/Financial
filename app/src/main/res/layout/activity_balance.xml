<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.boxin.financial.ui.my.balance.BalanceActivity">
    <include android:id="@+id/head_top"
        layout="@layout/head_common"/>
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/head_top"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="22dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:text="可用余额(元)"/>
    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="22sp"
        android:textColor="@color/colorTextMain_Title"
        tools:text="0.00"/>
    <Button
        android:id="@+id/btn_recharge"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_common_corners_main_color_div"
        android:layout_below="@id/tv_balance"
        android:layout_marginTop="22dp"
        android:text="充值"
        android:textSize="16sp"
        android:textColor="@android:color/white"/>
    <Button
        android:id="@+id/btn_withdraw"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_common_corners_gray_div"
        android:layout_below="@id/btn_recharge"
        android:layout_marginTop="12dp"
        android:text="提现"
        android:textSize="16sp"
        android:textColor="@color/colorTextMain_Title"/>

    <TextView
        android:id="@+id/tv_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_withdraw"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="充值提现记录"/>
</RelativeLayout>
