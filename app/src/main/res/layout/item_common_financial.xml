<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_financial"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_financial_left_right_margin"
        android:layout_marginRight="@dimen/common_financial_left_right_margin"
        android:background="@drawable/bg_common_corners_white_div"
        android:padding="@dimen/common_financial_margins">


        <TextView
            android:id="@+id/tv_financial_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorTextMain"
            android:textSize="@dimen/common_financial_name"
            tools:text="新手专享xxxx1010" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3.5dp"
            android:background="@drawable/bg_common_corners_c620ea_div"
            android:paddingBottom="1dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="1dp"
            android:textColor="@color/financial_type"
            android:textSize="10sp"
            tools:text="专享加息" />

        <TextView
            android:id="@+id/tv_financial_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_financial_name"
            android:textColor="@color/colorAccent_FF4C4C"
            android:textSize="@dimen/common_financial_profit"
            tools:text="15.011%" />

        <TextView
            android:id="@+id/tv_financial_profit_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_financial_profit"
            android:layout_marginTop="7.5dp"
            android:layout_toRightOf="@id/tv_financial_profit"
            android:textColor="@color/colorAccent_FF4C4C"
            android:textSize="12sp"
            tools:text="15.1%+19.0%" />

        <TextView
            android:id="@+id/financial_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_financial_profit"
            android:layout_marginTop="4dp"
            android:text="@string/common_financial_profit"
            android:textColor="@color/colorTextSubordinate"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_financial_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_financial_name"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_financial_profit_add"
            android:textColor="@color/colorTextMain"
            android:textSize="@dimen/common_financial_time"
            tools:text="1月365天" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/financial_profit"
            android:layout_marginTop="9dp"
            tools:text="24%" />

        <ProgressBar
            android:id="@+id/pb_data"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/financial_profit"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@id/tv_progress"
            android:progress="50"
            android:progressDrawable="@drawable/bg_progress_financial" />

        <TextView
            android:id="@+id/tv_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pb_data"
            android:layout_marginTop="14dp"
            android:textColor="@color/colorTextSubordinate_99"
            android:textSize="11dp"
            tools:text="月还息到期还本" />

        <TextView
            android:id="@+id/tv_lave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pb_data"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/tv_type_text"
            android:textColor="@color/colorTextSubordinate_99"
            android:textSize="11dp"
            tools:text="剩余 18,520 元" />
    </RelativeLayout>
</RelativeLayout>