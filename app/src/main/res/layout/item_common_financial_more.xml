<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_financial"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/common_financial_margins"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以下为近期已募集满额项目" />

        <ImageView
            android:id="@+id/iv_tips"
            android:layout_width="12dp"
            android:layout_height="9dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/bg_financial_detail_top" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_common_corners_white_div"
        android:layout_marginLeft="@dimen/common_financial_left_right_margin"
        android:layout_marginRight="@dimen/common_financial_left_right_margin"
        android:padding="@dimen/common_financial_margins">
        <TextView
            android:id="@+id/tv_financial_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/common_financial_name"
            android:textColor="@color/colorTextSubordinate_99"
            tools:text="新手专享xxxx1010" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            android:paddingRight="6dp"
            android:paddingBottom="1dp"
            android:layout_marginTop="3.5dp"
            android:textSize="10sp"
            android:textColor="@color/colorTextSubordinate_99"
            android:background="@drawable/bg_common_corners_99_div"
            tools:text="专享加息" />

        <TextView
            android:id="@+id/tv_financial_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_financial_name"
            android:textSize="@dimen/common_financial_profit"
            android:textColor="@color/colorTextSubordinate_99"
            tools:text="15.011%" />

        <TextView
            android:id="@+id/tv_financial_profit_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_financial_profit"
            android:layout_alignTop="@id/tv_financial_profit"
            android:layout_marginTop="7.5dp"
            android:textSize="12sp"
            android:textColor="@color/colorTextSubordinate_99"
            tools:text="15.1%+19.0%" />

        <TextView
            android:id="@+id/financial_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@id/tv_financial_profit"
            android:text="@string/common_financial_profit"
            android:textSize="11sp"
            android:textColor="@color/colorTextSubordinate" />

        <TextView
            android:id="@+id/tv_financial_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_financial_profit_add"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="27dp"
            android:layout_below="@id/tv_financial_name"
            android:textSize="@dimen/common_financial_time"
            android:textColor="@color/colorTextSubordinate_99"
            tools:text="1月365天" />

    </RelativeLayout>
</RelativeLayout>
