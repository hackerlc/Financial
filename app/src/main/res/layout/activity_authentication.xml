<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boxin.financial.ui.my.auth.AuthenticationActivity">
    <include android:id="@+id/head_top" layout="@layout/head_common"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head_top"
        android:padding="22dp"
        android:orientation="vertical"
        android:background="@android:color/white">
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="16sp"
            android:background="@null"
            android:maxLength="10"
            android:hint="请输入您的姓名"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_size"
            android:background="@color/colorLine"/>
        <EditText
            android:id="@+id/et_id_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="6dp"
            android:textSize="16sp"
            android:background="@null"
            android:maxLength="18"
            android:digits="0987654321xX"
            android:hint="请输入您的身份证号"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_size"
            android:background="@color/colorLine"/>
        <EditText
            android:id="@+id/et_bank_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="6dp"
            android:textSize="16sp"
            android:background="@null"
            android:maxLength="19"
            android:digits="0987654321"
            android:hint="请输入您的银行卡号"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_size"
            android:background="@color/colorLine"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="6dp"
            android:textSize="16sp"
            android:background="@null"
            tools:text="15888890983"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_size"
            android:background="@color/colorLine"/>
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="6dp"
            android:textSize="16sp"
            android:background="@null"
            android:maxLength="19"
            android:digits="0987654321"
            android:hint="请输入验证码"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_size"
            android:background="@color/colorLine"/>
        <Button
            android:id="@+id/btn_binding"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_common_corners_main_color_div"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:text="确认绑定"/>
    </LinearLayout>
</RelativeLayout>
