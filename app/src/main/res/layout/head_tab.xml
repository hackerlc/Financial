<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/head_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_head_top"
        android:background="@color/colorLine">
        <ImageView
            android:id="@+id/iv_left_img"
            android:layout_width="@dimen/common_head_top_img_size"
            android:layout_height="@dimen/common_head_top_img_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_head_top_left_right_margin"
            android:padding="12dp"
            android:src="@drawable/bg_left"
            android:visibility="gone"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/tl_tab"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            app:tabTextColor="@color/colorTextMain_Title"
            app:tabSelectedTextColor="@color/colorTextMain_Title"
            app:tabIndicatorColor="@color/colorPrimary" />

    </RelativeLayout>
</RelativeLayout>