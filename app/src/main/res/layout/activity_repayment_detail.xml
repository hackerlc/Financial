<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.my.capital.flow.repayment.detail.RepaymentDetailActivity">

    <include
        android:id="@+id/ic_head"
        layout="@layout/head_common" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_repayment_info_banner"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            tools:text="汽车抵押借款TZ001" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            tools:text="待回款" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ed_info"
                style="@style/Repayment_Text_Info"
                android:text="已回款信息" />

            <TextView
                android:id="@+id/ed_all_money"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_below="@id/ed_info"
                android:text="已回款总额" />

            <TextView
                android:id="@+id/tv_ed_all_money"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ed_info"
                tools:text="2,124,00元" />

            <TextView
                android:id="@+id/ed_money"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_below="@id/ed_all_money"
                android:text="已回款本金" />

            <TextView
                android:id="@+id/tv_ed_money"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ed_all_money"
                tools:text="2,124,00元" />

            <TextView
                android:id="@+id/ed_profit"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_below="@id/ed_money"
                android:text="已回款收益" />

            <TextView
                android:id="@+id/tv_ed_profit"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ed_money"
                tools:text="2,124,00元" />

            <View
                android:id="@+id/line1"
                style="@style/Common_Line_Height"
                android:layout_below="@id/ed_profit" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_ed">

            <TextView
                android:id="@+id/ing_info"
                style="@style/Repayment_Text_Info"
                android:text="未回款信息" />

            <TextView
                android:id="@+id/ing_all_money"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_below="@id/ing_info"
                android:text="未回款总额" />

            <TextView
                android:id="@+id/tv_ing_all_money"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ing_info"
                tools:text="2,124,00元" />

            <TextView
                android:id="@+id/ing_money"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_below="@id/ing_all_money"
                android:text="未回款本金" />

            <TextView
                android:id="@+id/tv_ing_money"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ing_all_money"
                tools:text="2,124,00元" />

            <TextView
                android:id="@+id/ing_profit"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_below="@id/ing_money"
                android:text="未回款收益" />

            <TextView
                android:id="@+id/tv_ing_profit"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ing_money"
                tools:text="2,124,00元" />

            <View
                android:id="@+id/line2"
                style="@style/Common_Line_Height"
                android:layout_below="@id/ing_profit" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/Repayment_Text_Info"
                android:text="回款计划" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    style="@style/Investment_Pan_Head_Text"
                    android:text="回款日期"/>
                <TextView
                    style="@style/Investment_Pan_Head_Text"
                    android:text="回款总额(元)"/>
                <TextView
                    style="@style/Investment_Pan_Head_Text"
                    android:text="回款本金(元)"/>
                <TextView
                    style="@style/Investment_Pan_Head_Text"
                    android:text="回款收益(元)"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_investment_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            <View style="@style/Common_Line_Height"
                android:layout_below="@id/ing_profit" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_ed">

            <TextView
                android:id="@+id/product_info"
                style="@style/Repayment_Text_Info"
                android:text="产品信息" />

            <TextView
                android:id="@+id/product_no"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_below="@id/product_info"
                android:text="产品编号" />

            <TextView
                android:id="@+id/tv_product_no"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/product_info"
                tools:text="11122222222" />

            <TextView
                android:id="@+id/interest_rate"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_below="@id/product_no"
                android:text="预期年华收益" />

            <TextView
                android:id="@+id/tv_interest_rate"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/product_no"
                tools:text="15%" />

            <TextView
                android:id="@+id/date"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_below="@id/interest_rate"
                android:text="期限" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/interest_rate"
                tools:text="3个月" />

            <TextView
                android:id="@+id/style"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_below="@id/date"
                android:text="还款方式" />

            <TextView
                android:id="@+id/tv_style"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/date"
                tools:text="11122222222" />

            <TextView
                android:id="@+id/pay_money"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_below="@id/style"
                android:text="出借金额" />

            <TextView
                android:id="@+id/tv_pay_money"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/style"
                tools:text="121212" />

            <TextView
                android:id="@+id/product"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_below="@id/pay_money"
                android:text="预期收益" />

            <TextView
                android:id="@+id/tv_product"
                style="@style/Repayment_Text"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/pay_money"
                tools:text="50元" />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>